extends layout/main

block content

  #modal1.js-modal.modal.bottom-sheet
    .modal-content
      h4 Riepilogo articoli nel carrello
      p#products 
    .modal-footer
      div(id="paypal")
          form(action="/create")
            input(type='hidden', name='method', value='paypal')
            button.btn.waves-effect.waves-light(type='submit', name='action')
              | Procedi all'acquisto
              i.material-icons.right send

  .container
    h1 Carrello PayPal

    .row
      each key in productsJSON
        .col.s12.m3
          .card
            .card-image
              img(src='images/'+key.sku+'.jpg')
              |  
              span.card-title !{key.name}
              |  
              a.btn-floating.halfway-fab.waves-effect.waves-light.red(data-sku=key.sku, href='#')
                i.material-icons add
            .card-content
              p
                | !{key.price}
